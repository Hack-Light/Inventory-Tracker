<!DOCTYPE html>
<html lang="en">
	<%- include("partials/head.ejs") %>

	<body>
		<div class="uk-container">
			<%- include("partials/navbar.ejs") %>
			<h1 class="uk-heading-line uk-text-center"><span>Inventory</span></h1>

			<div class="uk-child-width-1-4 uk-grid-small uk-text-center" uk-grid>
				<style>
					.uk-grid-column-small > *,
					.uk-grid-small > * {
						padding-left: 0px !important;
					}
				</style>

				<% for( let index = 0; index < items.length; index++ ) { %>

				<div
					class="uk-card uk-card-default uk-margin-large-bottom uk-width-1-3@m"
				>
					<div class="uk-card-header">
						<div class="uk-grid-small uk-flex-middle" uk-grid>
							<div class="uk-width-expand">
								<h3 class="uk-card-title uk-margin-remove-bottom"> <%= items[index].name %>  </h3>
								<p class="uk-text-meta uk-margin-remove-top">
									<time datetime="2016-04-01T19:00"> Warehouse: <%= items[index].warehouse.state %>, <%= items[index].warehouse.country %></time>
								</p>
							</div>
						</div>
					</div>
					<div class="uk-card-body">
						<p><%= items[index].description %></p>
						<p>Item size: <%= items[index].itemSize %>Kg</p>
						<p>Item destination: <%= items[index].destination %></p>
					</div>
					<div class="uk-card-footer">
						<a href="/item/update/<%= items[index].trackID %>" class="uk-button uk-button-text"
							>Edit</a
						>
						<a href="/item/delete/<%= items[index].trackID %>" class="uk-button uk-button-text uk-text-danger"
							>Delete</a
						>
					</div>
				</div>

				<% } %>
			</div>
		</div>
		<%- include("partials/scripts.ejs") %>
	</body>
</html>
